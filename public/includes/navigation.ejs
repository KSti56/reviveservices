            </div>
        </div>
        <a href="<%= level %>/redirect/discord" class="link-discord">Discord</a>
        <a href="#" class="link-login">Login</a>
    </div>

    <a
        href="javascript:void(0);"
        class="responsive-icon"
        onclick="toggleNavigation()"
        >&#9776;</a
    >

    <script>
        const currentPage = "<%= page %>";
        const link = document.querySelector(".link-" + currentPage);
        if (link) link.classList.add("selected");
    </script>
